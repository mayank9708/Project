# Use OWASP ZAP official image
FROM zaproxy/zap-stable

# Switch to root user
USER root

# Set working directory
WORKDIR /usr/src/app

# Install Python (if not already available)
RUN apt-get update && apt-get install -y python3 python3-pip

# Copy the script into the container
COPY scripts/script.py /usr/src/app/script.py

# Ensure execution permissions
RUN chmod +x /usr/src/app/script.py

# Default command to execute the script
ENTRYPOINT ["python3", "/usr/src/app/script.py"]
